// load libs
@require 'nib'
@require 'rupture'
@require 'responsa'
@require 'fonts'


// load fonts
@import url("http://fonts.googleapis.com/css?family=Open+Sans:300,400,600")


// nib reset
global-reset()


// colors
cararra = #eae9e7
blue = #2cc1d9
brown = #332111
brown-light = #ccb9a7
kabul	= #614F3E
gallery = #ededed
tea = #d6d3cf
white = #fff
pearl-bush = #e5dcd3

// images
logotype-factoria = url('assets/img/logotype_factoria.png')
social-networks =  url('assets/img/sprite_social_networks.png')

// fonts
open-sans = 'Open Sans', sans-serif


// ui elements
@require 'ui'


// theme's templates
@require 'templates/home'
@require 'templates/a-factoria'
@require 'templates/portfolio'
@require 'templates/sala-de-imprensa'
@require 'templates/pressroom-single'
@require 'templates/portfolio-single'


// responsive versions
@require 'responsive/tablets'

// start theme
body
	font-family open-sans
	font-weight 400
	overflow-x hidden

	// ui elements
	.title-wrapper
		position relative
		text-align center
		
		.title
			background-color white
			color brown
			display inline-block
			font-family ChaletParis
			font-size 30px
			margin 0 0 50px 0
			padding 0 16px
			position relative
			text-align center
			text-transform uppercase
			z-index 2
			
			a
				color brown
				text-decoration none
			
		hr
			border none
			border-top 1px solid #d6d3cf
			left 0
			position absolute
			top 6px
			width 100%
			z-index 1
