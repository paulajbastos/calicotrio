// globals
.container
	container(940px)
	

// Main menu
.mm-menu.mm-front 
	z-index 5 !important
		

// Header
#h
	background-color #EC8332
	left 0
	height 140px
	position fixed
	top 0
	transition all 0.5s
	width 100%
	z-index 4
	
	.logotype
		replace-text(logotype)
		float left
		height 120px			
		transition all 0.5s
		width 270px
		
		a
			display block
			height 120px
			width 270px

	// Main menu
	

			
.bt-menu
	transition all 0.5s
	background-color transparent
	border none
	cursor pointer
	float right
	height 25px
	margin 30px 0 0 0
	padding 0
	transition all 0.5s
	
	span
		background-color blue
		border-radius 2px
		display block
		height 5px
		margin 0 0 4px 0
		transition all 0.5s
		width 25px
	
	span:last-child
		margin-bottom 0
		
.bt-menu,
.btn-previous
	position relative
	z-index 1
	

.bt-menu.close
	position relative
	
	span
		background-color white
		position absolute
		
	span:first-child
		top 10px
		transform rotate(-45deg)
		
	span:nth-of-type(2n)
		opacity 0
		
	span:last-child
		top 10px
		transform rotate(45deg)
		
.bt-menu.open
	position relative
	
	span
		position absolute				
		
	span:first-child
		top 0 !important
		transform rotate(0)				
		
	span:nth-of-type(2n)
		opacity 1
		top 10px !important
		
	span:last-child
		top 20px !important
		transform rotate(0)
	
