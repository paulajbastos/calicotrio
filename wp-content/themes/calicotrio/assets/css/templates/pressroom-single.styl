						background-color white
						border-top 1px solid tea
						bottom -11px
						height 10px
						position absolute
						text-align center						
						width 780px
						
						.read-more
							background-color blue
							border 0
							bottom 1px
							color white
							cursor pointer
							font-family ChaletParis
							font-size 14px
							line-height 14px
							padding 5px 11px 5px 11px
							position relative
							z-index 1
							
