.single-pressroom
	#m
		.header
			background-size cover
			height 1200px
			
		.container-wrapper
			position absolute
			top 538px
			width 100%
			
			.container
				container(780px)
				
				.title
					background-color brown
					color white
					font-family ChaletParis
					font-size 38px
					margin-left -100%
					padding 20px 0
					padding-left 100%
					
